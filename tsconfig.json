{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": [
        "./src",
    ],
    "exclude": [
        "./node_modules",
        "./tests",
        "./build"
    ]
}